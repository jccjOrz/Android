<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 添加头像ImageView -->
    <ImageView
        android:id="@+id/ImageUser_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="50dp" />

    <!-- 添加姓名TextView -->
    <TextView
        android:id="@+id/Username_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名"
        android:layout_below="@id/ImageUser_f"
        android:layout_alignStart="@id/ImageUser_f"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/UserClasss_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所属单位"
        android:layout_below="@id/ImageUser_f"
        android:layout_alignEnd="@id/ImageUser_f"
        android:layout_toEndOf="@id/Username_f"
        android:layout_centerHorizontal="true"
        android:gravity="right"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp" />

    <!-- 添加标题TextView -->
    <TextView
        android:id="@+id/Title_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:layout_below="@id/UserClasss_f"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20sp"/>
    <!-- 添加具体内容TextView -->
    <TextView
        android:id="@+id/contentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="具体内容"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:layout_below="@id/Title_f"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:textSize="15sp"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/Cancel_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我了解了"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp" />

</RelativeLayout>